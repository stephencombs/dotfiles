{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "path",
					"style": "plain",
					"foreground": "#bd93f9",
					"template": " {{ .Path }} "
				},
				{
					"type": "git",
					"style": "plain",
					"powerline_symbol": "\ue0b0",
					"foreground": "#ffb86c",
					"template": " \ue725 ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
					"properties": {
						"branch_icon": "",
						"fetch_stash_count": true,
						"fetch_status": false,
						"fetch_upstream_icon": true
					}
				}
			]
		},
		{
			"alignment": "right",
			"segments": [
				{
					"foreground": "#81ff91",
					"style": "plain",
					"template": "<#7eb8da>RAM:</> {{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1073741824.0) }}/{{ (div .PhysicalTotalMemory 1073741824.0) }}GB",
					"type": "sysinfo"
				},
				{
					"foreground": "#81ff91",
					"properties": {
						"fetch_version": true
					},
					"style": "plain",
					"template": "<#cc7eda>\u007C </><#7eb8da>\ue781 </>{{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
					"type": "node"
				},
				{
					"type": "php",
					"style": "plain",
					"foreground": "#81ff91",
					"template": "<#cc7eda>\u007C </><#7eb8da>\ue73d </>{{ .Full }}"
				},
				{
					"type": "npm",
					"style": "plain",
					"foreground": "#81ff91",
					"template": "<#cc7eda>\u007C </><#7eb8da>\ue71e </>{{ .Full }}"
				},
				{
					"type": "sysinfo",
					"style": "plain",
					"foreground": "#81ff91",
					"template": "<> </>"
				},
				{
					"foreground": "#81ff91",
					"properties": {
						"time_format": "15:04:05"
					},
					"style": "plain",
					"template": "<#cc7eda>\u007C </>‚è∞{{ .CurrentDate | date .Format }} ",
					"type": "time"
				},
				{
					"foreground": "#ffb86c",
					"properties": {
						"style": "austin",
						"threshold": 150
					},
					"style": "plain",
					"template": "<#cc7eda>\u007C </>{{ .FormattedMs }} ",
					"type": "executiontime"
				}
			],
			"type": "prompt"
		}
	],
	"transient_prompt": {
		"background": "transparent",
		"foreground": "#ffffff",
		"template": "{{ .Shell }}> "
	}
}
